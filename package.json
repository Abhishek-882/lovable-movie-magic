{
  "name": "fullstack-app",
  "private": true,
  "scripts": {
    "start": "node create-server.js && node /opt/render/project/src/dist/server.js",
    "build": "rm -rf dist && vite build && tsc --project tsconfig.render.json",
    "dev": "concurrently \"vite\" \"ts-node-dev server.ts\"",
    "dev:frontend": "cd frontend && vite",
    "dev:backend": "cd backend && ts-node-dev --respawn src/server.ts",
    "build:frontend": "cd frontend && vite build",
    "build:backend": "cd backend && tsc",
    "preview": "npm run build && npm start"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "ts-node-dev": "^2.0.0",
    "vite": "^4.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0"
  }
}
