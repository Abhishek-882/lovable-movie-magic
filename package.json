{
  "name": "vite_react_shadcn_ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "ts-node server.ts", // Directly run TS in production (not recommended)
    "dev": "concurrently -n \"FRONTEND,BACKEND\" -c \"bgBlue.bold,bgGreen.bold\" \"vite\" \"ts-node-dev --respawn --transpile-only server.ts\"",
    "build": "vite build && tsc", // Compiles both frontend and backend
    "preview": "node dist/server.js", // Production uses compiled JS
    "lint": "eslint .",
    "migrate": "npx sequelize-cli db:migrate",
    "seed": "npx sequelize-cli db:seed:all"
  },
  "dependencies": {
    // Keep all your existing dependencies
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "sequelize": "^6.37.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    // Keep all your existing devDependencies
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.3",
    "@types/express": "^4.17.21",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3",
    "vite": "^5.4.1",
    "ts-node": "^10.9.2" // Added for direct TS execution
  }
}
