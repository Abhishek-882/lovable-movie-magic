{
  "name": "fullstack-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently \"vite\" \"ts-node-dev --respawn --transpile-only server.ts\"",
    "build": "rm -rf dist && vite build && tsc -p tsconfig.backend.json",
    "verify": "node scripts/verify-build.js",
    "preview": "npm run build && npm run verify && npm start",
    "lint": "eslint ."
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/express": "^4.17.21",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "eslint": "^8.56.0"
  }
}
