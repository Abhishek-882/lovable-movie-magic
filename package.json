    // ... (all other existing frontend deps)

    // Add these backend dependencies:
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "sequelize": "^6.37.1",
    "pg": "^8.11.3" // If using PostgreSQL
  },
  "devDependencies": {
    // Keep ALL your existing frontend devDependencies
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.3",
    // ... (all other existing devDeps)

    // Add these backend devDependencies:
    "@types/express": "^4.17.21",
    "ts-node-dev": "^2.0.0",
    "concurrently": "^8.2.2"
  }
