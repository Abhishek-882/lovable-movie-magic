{
  "name": "fullstack-app",
  "private": true,
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "cd frontend && vite",
    "dev:backend": "cd backend && ts-node-dev --respawn src/server.ts",
    "build": "rm -rf dist && npm run build:frontend && npm run build:backend && node build-verifier.js",
    "build:frontend": "cd frontend && vite build",
    "build:backend": "cd backend && tsc",
    "preview": "npm run build && npm start"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "ts-node-dev": "^2.0.0",
    "vite": "^4.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0"
  }
}
