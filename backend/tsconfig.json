{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["src/server/*"],
      "@db/*": ["src/db/*"],
      "@config/*": ["src/config/*"]
    },
    "types": ["node"]
  },
  "include": [
    "server.ts",
    "src/server/**/*.ts",
    "src/db/**/*.ts",
    "src/config/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/client/**/*",
    "vite.config.ts",
    "**/*.spec.ts"
  ]
}
